.host

  - if host.image_url
    img.host-image src="#{ host.image_url }"

  .host-wrapper
    h4: a href="#{ url_for(host) }"
      | #{ host.full_name }

      - if host.quip
        <span class="quip">#{ host.quip }</span>

    ul.social-links

      - if host.twitter
        li: a href="https://twitter.com/#{ host.twitter }"
          | <i class="icon-twitter"></i> Twitter

      - if host.flattr
        li: a href=""
          | <i class="icon-money"></i> Flattr

      - if host.blog_url
        li: a href="#{ host.blog_url }"
         | <i class="icon-link"></i> Blog

    .description.text-content

      == markdown host.content
      - if mode == "short"
        a.more-link-text href="#{ url_for(host) }" title="Mehr Ã¼ber #{ host.name } "
               |  mehr... <i class="icon-circle-arrow-right"></i>

  - if mode == "full"
    - if host.episodes.length != 0
      .host-episodes
        == slim :"includes/_episode-list", :locals => { :episodes => host.episodes, :list_icon => "folder-close", :mode => "mini-show", :list_label => "Sendungen mit #{host.full_name}" }

      
